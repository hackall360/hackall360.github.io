---
const metrics: Array<{ label: string; value: string; description: string }> = [
  {
    label: 'Production launches',
    value: '35+',
    description: 'Kubernetes, serverless, and edge rollouts guided from design review to steady state.'
  },
  {
    label: 'Docs & runbooks',
    value: '120+',
    description: 'SLOs, incident playbooks, and onboarding guides teams actually reference.'
  },
  {
    label: 'MTTR improvement',
    value: '22â€“38%',
    description: 'Measured across two orgs after observability upgrades and on-call ritual redesign.'
  },
  {
    label: 'Security coverage',
    value: 'Offense + defense',
    description: 'Threat modeling, hardening, and abuse testing to keep guardrails honest.'
  }
];
---
<section class="relative isolate mt-18 overflow-hidden rounded-4xl border border-accent/15 bg-surface-elevated/80 py-12 shadow-glow">
  <div class="pointer-events-none absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(34,211,238,0.18),_transparent_65%)] opacity-70" aria-hidden="true"></div>
  <div class="relative mx-auto flex max-w-6xl flex-col gap-8 px-6 sm:px-12">
    <h2 class="font-mono text-xs uppercase tracking-[0.5em] text-accent/80" data-motion-reveal data-motion-direction="up">
      // by the numbers
    </h2>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4" data-motion-group data-motion-stagger="0.1">
      {metrics.map((metric) => (
        <article
          data-motion-child
          data-motion-direction="up"
          tabindex="0"
          class="group rounded-3xl border border-accent/15 bg-surface-highlight/60 p-6 text-left shadow-inner-terminal transition duration-300 ease-spring-out hover:border-accent/60 focus-visible:outline-none focus-visible:shadow-glow focus-visible:focus-ring-accent"
        >
          <h3 class="text-3xl font-semibold text-white sm:text-4xl" aria-label={`${metric.value} ${metric.label}`}>
            {metric.value}
          </h3>
          <p class="mt-1 font-semibold uppercase tracking-wide text-accent-light">{metric.label}</p>
          <p class="mt-3 text-sm text-neutral-soft">{metric.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
